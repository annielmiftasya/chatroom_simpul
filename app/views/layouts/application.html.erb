<!DOCTYPE html>
<html>
  <head>
    <title>RailsChatTutorial</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

   <%= javascript_include_tag 'application' %>
<%= stylesheet_link_tag 'application', media: 'all' %>

  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-12">
          <%= render partial: 'shared/navigation_bar' %>
          <div class="my-3">
            <%= yield %>

              <!-- Add a hidden element to store the room ID -->
              <% if @room %>
                <div id="room-info" data-room-id="<%= @room.id %>"></div>
              <% end %>

          </div>
        </div>
      </div>
    </div>
  </body>
</html>
